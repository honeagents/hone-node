{
  "name": "@hone/sdk",
  "version": "0.1.0",
  "description": "Hone SDK for tracking and evaluating LLM calls",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/",
    "build:cjs": "tsc --outDir dist-cjs/ --module commonjs --moduleResolution node && node scripts/move-cjs.js",
    "clean": "rm -rf dist/ dist-cjs/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests --testTimeout 30000",
    "test:watch": "npm test -- --watch",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pebbleai/hone.git"
  },
  "keywords": [
    "LLM",
    "AI",
    "evaluation",
    "tracing",
    "Hone"
  ],
  "author": "Pebble AI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pebbleai/hone/issues"
  },
  "homepage": "https://github.com/pebbleai/hone#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {},
  "peerDependenciesMeta": {}
}
