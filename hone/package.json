{
  "name": "@hone/sdk",
  "version": "0.1.0",
  "description": "Hone SDK - AI Experience Engineering Platform for tracking and improving LLM applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wrappers": {
      "import": "./dist/wrappers/index.mjs",
      "require": "./dist/wrappers/index.js",
      "types": "./dist/wrappers/index.d.ts"
    },
    "./wrappers/openai": {
      "import": "./dist/wrappers/openai.mjs",
      "require": "./dist/wrappers/openai.js",
      "types": "./dist/wrappers/openai.d.ts"
    },
    "./wrappers/anthropic": {
      "import": "./dist/wrappers/anthropic.mjs",
      "require": "./dist/wrappers/anthropic.js",
      "types": "./dist/wrappers/anthropic.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "tracing",
    "evaluation",
    "observability",
    "langsmith",
    "hone",
    "openai",
    "anthropic"
  ],
  "author": "Hone Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stone-pebble/hone-sdk"
  },
  "homepage": "https://honeagents.ai",
  "bugs": {
    "url": "https://github.com/stone-pebble/hone-sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "langsmith": "^0.4.4"
  },
  "peerDependencies": {
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.18.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
